
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actor Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Actor/index.css">
</head>
<body>
    <div class="container">
        <h2 class="page-title">🎬 Actor Management</h2>

        <!-- Add Acto Button -->
        <div class="add-Actor-container">
            <a href="/Actor/AddActor" class="btn-add-Actor">
                <i class="fas fa-plus-circle"></i> Add New Actor
            </a>
        </div>

        <!-- Actors Table -->
        <div class="table-container">
            <table class="Actor-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Date of Birth</th>
                        <th>Profile Picture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Actor in Model)
                    {
                        <tr>
                            <td>@Actor.Id</td>
                            <td>@Actor.FirstName @Actor.LastName</td>
                            <td>@Actor.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>
                                <img src="@Actor.ProfilePictureUrl" alt="Actor Picture" class="img-thumbnail" width="50" height="50" />
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/Actor/DetailsActor/@Actor.Id" class="btn-details">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a href="/Actor/EditActor/@Actor.Id" class="btn-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form action="/Actor/DeleteActor/@Actor.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this director?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
