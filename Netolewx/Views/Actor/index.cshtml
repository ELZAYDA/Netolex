
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Actor Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Actor/index.css">
</head>
<body>
    <div class="container">
        <h2 class="page-title">🎬 Actor Management</h2>

        <!-- Add Acto Button -->
        <div class="add-Actor-container">
            <a href="/Actor/Add" class="btn-add-Actor">
                <i class="fas fa-plus-circle"></i> Add New Actor
            </a>
        </div>

        <!-- Actors Table -->
        <div class="table-container">
            <table class="Actor-table">
                <thead>
                    <tr>
                        <th>Profile</th>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Date of Birth</th>
                        <th>Profile Picture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Actor in Model as IEnumerable<Actor>)
                    {
                        <tr>
                            <td>
                                <img src="~/files/images/@Actor.Image" alt="Profile Image" class="profile-image" style="width: 100px; height: 100px; border-radius: 50%; object-fit: cover;" />
                            </td>
                            <td>@Actor.Id</td>
                            <td>@Actor.FirstName @Actor.LastName</td>
                            <td>@Actor.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>
                                <partial name="_buttons" model="@Actor.Id" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
