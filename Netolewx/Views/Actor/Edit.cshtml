@model DetailsEditActorVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Actor</title>
    <link href="~/css/Actor/EditActor.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="form-container">

        @if (!string.IsNullOrEmpty(Model.Image) && Model.Image != "No image")
        {
            <div class="image-container">
                <div style="display: flex; justify-content: center; align-items: center; height: 200px;">
                    <img src="~/files/images/@Model.Image" alt="Profile Image" class="profile-image" style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover;" />
                </div>
            </div>
        }
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="Id" />

            <!-- Hidden field to store the image name -->
            <input type="hidden" asp-for="Image" />
            <div class="mb-3 file-upload-container">
                <label asp-for="ImageName" class="form-label file-upload-label">
                    <span class="upload-icon">📷</span>
                    <span class="upload-text">Upload Profile Image</span>
                </label>
                <input asp-for="ImageName" value="@TempData[" ImageName"]" class="form-control-file file-upload-input" type="file" />
            </div>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Biography" class="form-label">Biography</label>
                <textarea asp-for="Biography" class="form-control" rows="4" placeholder="Enter biography"></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Save
            </button>
        </form>
    </div>
</body>
</html>
