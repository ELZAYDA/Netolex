@model SignUpVM
@{
    Layout ="_AuthLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Netolex</title>
    <link rel="stylesheet" href="~/css/Account/SignUp.css">
</head>
<body>
    <div class="container">
        <div class="logo">
            <h1>Net<span>olex</span></h1>
        </div>

        <h2>Create your account</h2>
        <div asp-validation-summary="ModelOnly"></div>
        <form asp-action="SignUp">
            <div class="form-group">
                <label for="Username">Username</label>
                <input class="text" asp-for="Username" placeholder="Username" required="">
            </div>

            <div class="form-group">
                <label for="FName">First Name</label>
                <input class="text" asp-for="FName" placeholder="First Name" required="">
            </div>
            
            <div class="form-group">
                <label for="LName">Last Name</label>
                <input class="text" asp-for="LName" placeholder="Last Name" required="">
            </div>

            <div class="form-group">
                <label for="Email">Email Address</label>
                <input class="text email" asp-for="Email" placeholder="Email" required="">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <div class="password-container">
                    <input class="text" asp-for="Password" placeholder="Password" required="">
                    <button type="button" class="password-toggle">
                        <span>👁️</span>
                    </button>
                </div>
            </div>

            <div class="form-group">
                <label for="confirm-password">Confirm Password</label>
                <div class="password-container">
                    <input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
                    <button type="button" class="password-toggle">
                        <span>👁️</span>
                    </button>
                </div>
            </div>

            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="AgreeToTerms" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <button type="submit" class="btn">Sign Up</button>
        </form>

        <div class="divider">
            <span>or continue with</span>
        </div>

        <div class="social-login">
            <button class="social-btn">Google</button>
            <button class="social-btn">Facebook</button>
            <button class="social-btn">Apple</button>
        </div>

        <div class="login-link">
            Already have an account? <a asp-action="SignIn">Log in</a>
        </div>

        <div class="feature-list">
            <h3>Sign up to get:</h3>
            <ul>
                <li>Personalized movie recommendations</li>
                <li>Create watchlists and track your viewing history</li>
                <li>Review and rate movies</li>
                <li>Access exclusive content and previews</li>
            </ul>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>