@model int
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="action-buttons">
    <a  asp-action="Details" asp-route-id="@Model" class="btn-details">
        <i class="fas fa-eye"></i> Details
    </a>
    <a  asp-action="Edit" asp-route-id="@Model" class="btn-edit">
        <i class="fas fa-edit"></i> Edit
    </a>
    <form  asp-action="Delete" asp-route-id="@Model" method="post" class="d-inline">
        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this review?')">
            <i class="fas fa-trash"></i> Delete
        </button>
    </form>
</div>
