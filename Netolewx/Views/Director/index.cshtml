
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Director Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Director/index.css">
</head>
<body>
    <div class="container">
        <h2 class="page-title">🎬 Director Management</h2>

        <!-- Add Director Button -->
        <div class="add-director-container">
            <a href="/Director/AddDirector" class="btn-add-director">
                <i class="fas fa-plus-circle"></i> Add New Director
            </a>
        </div>

        <!-- Directors Table -->
        <div class="table-container">
            <table class="director-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Date of Birth</th>
                        <th>Profile Picture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var director in Model)
                    {
                        <tr>
                            <td>@director.Id</td>
                            <td>@director.FirstName @director.LastName</td>
                            <td>@director.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>
                                <img src="@director.ProfilePictureUrl" alt="Director Picture" class="img-thumbnail" width="50" height="50" />
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/Director/DetailsDirector/@director.Id" class="btn-details">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a href="/Director/EditDirector/@director.Id" class="btn-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form action="/Director/DeleteDirector/@director.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this director?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
