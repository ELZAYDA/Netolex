
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Director Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Director/index.css">
</head>
<body>
    <div class="container">
        <h2 class="page-title">🎬 Director Management</h2>

        <!-- Add Director Button -->
        <div class="add-director-container">
            <a href="/Director/Add" class="btn-add-director">
                <i class="fas fa-plus-circle"></i> Add New Director
            </a>
        </div>

        <!-- Directors Table -->
        <div class="table-container">
            <table class="director-table">
                <thead>
                    <tr>
                        <th>Profile</th>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Date of Birth</th>
                        <th>Profile Picture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var director in Model as IEnumerable<Director>)
                    {
                        <tr>
                            <td>
                                <img src="~/files/images/@director.Image" alt="Profile Image" class="profile-image" style="width: 100px; height: 100px; border-radius: 50%; object-fit: cover;" />
                            </td>
                            <td>@director.Id</td>
                            <td>@director.FirstName @director.LastName</td>
                            <td>@director.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>
                                <partial name="_buttons" model="@director.Id" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>