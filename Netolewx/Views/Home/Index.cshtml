<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Grid</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/index.css">
</head>
<body>
    <div class="container">
        <!-- Search Bar -->
        <section class="search-bar">
            <form  asp-action="Index" >
                <input type="text" name="search" placeholder="Search for movies..." class="form-control">
                <button type="submit" class="btn btn-primary" aria-label="Search">
                    <i class="fas fa-search"></i>
                </button>
            </form>

        </section>

        <!-- Movie Grid -->
        <div class="movie-grid">
            @foreach (var movie in Model)
            {
                <div class="movie-card" onclick="window.location.href='/Movie/Details/@movie.Id'">
                    <!-- Movie Image -->
                    <div class="movie-image">
                        <img src="~/images/JW.jpg">
                    </div>

                    <!-- Movie Info -->
                    <div class="movie-info">
                        <h4>@movie.Title</h4>
                    </div>

                    <!-- Watchlist Button -->
                    <button class="watchlist-btn" onclick="event.stopPropagation(); addToWatchlist(@movie.Id);">
                        <i class="fas fa-plus"></i> Watchlist
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- JavaScript for Watchlist -->
    <script>
        function addToWatchlist(movieId) {
            // Add your logic to add the movie to the watchlist
            console.log(`Added movie with ID ${movieId} to watchlist`);
        }
    </script>
</body>
</html>
