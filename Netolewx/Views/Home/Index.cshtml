@model MovieVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Grid</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/index.css">
</head>
<body class="dark-theme">
    <div class="container">
        <!-- Search Bar -->
        <section class="search-bar">
            <form asp-action="Index">
                <input type="text" name="search" placeholder="Search for movies..." class="form-control">
                <button type="submit" class="btn btn-primary" aria-label="Search">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </section>

        <!-- Genre Filter Buttons -->
        <div class="mb-4">
            <div class="btn-group" role="group">
                <a asp-action="Index" asp-route-genreFilter="" class="btn btn-outline-secondary all-movies-btn @(string.IsNullOrEmpty(Context.Request.Query["genreFilter"]) ? "active" : "")">
                    🎬 All Movies
                </a>

                @foreach (var genre in Model.Genres)
                {
                    <a asp-action="Index" asp-route-genreFilter="@genre.Name" class="btn btn-outline-secondary @(Context.Request.Query["genreFilter"] == genre.Name ? "active" : "")">
                        @genre.Name
                    </a>
                }
            </div>
        </div>

        <!-- Movie Grid -->
        <div class="row">
            @foreach (var movie in Model.Movies)
            {
                <div class="movie-card" onclick="window.location.href='/Movie/Details/@movie.Id'">
                    <!-- Movie Image -->
                    <div class="movie-image">
                        <img src="@movie.PosterUrl" />
                    </div>
                    <!-- Movie Info -->
                    <div class="movie-info">
                        <h4>@movie.Title</h4>
                    </div>




                </div>
            }
        </div>
    </div>


    <!-- JavaScript for Watchlist -->
    <script>
        function addToWatchlist(movieId) {
            // Add your logic to add the movie to the watchlist
            console.log(`Added movie with ID ${movieId} to watchlist`);
        }
    </script>
</body>
</html>
<style>
    /* Variables */
    :root {
        --bg-primary: #121212;
        --bg-secondary: #2a0808;
        --text-primary: #ffffff;
        --text-secondary: #cccccc;
        --accent-color: #ff3333;
        --error-color: #ff4444;
        --card-hover: #3a0c0c;
        --border-color: #461111;
    }

    /* Base Styles */
    body.dark-theme {
        background-color: var(--bg-primary);
        color: var(--text-primary);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* Search Bar */
    .search-bar {
        margin-bottom: 2rem;
    }

        .search-bar form {
            display: flex;
            gap: 1rem;
            max-width: 600px;
            margin: 0 auto;
        }

    .form-control {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border-color);
        color: var(--text-primary);
        padding: 0.75rem 1rem;
        border-radius: 4px;
        flex-grow: 1;
    }

        .form-control:focus {
            outline: none;
            border-color: var(--accent-color);
            box-shadow: 0 0 0 2px rgba(255, 51, 51, 0.25);
        }

        .form-control::placeholder {
            color: #885555;
        }

    .btn-primary {
        background-color: var(--accent-color);
        border: none;
        color: #ffffff;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-primary:hover {
            background-color: #ff4444;
            transform: translateY(-2px);
        }

    /* Genre Filter Buttons */
    .btn-group {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 2rem;
    }

    .btn-outline-secondary {
        background-color: transparent;
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none; /* يضمن عدم وجود خط تحت النص */
    }

        .btn-outline-secondary:hover,
        .btn-outline-secondary.active {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
            color: #ffffff;
            text-decoration: none; /* يضمن عدم ظهور الخط عند التحويل */
        }


    /* ===== Movie Cards Styles ===== */
    .movie-card {
        background-color: #1e1e1e;
        border-radius: 10px;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        margin: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        /* Hover Effect */
        .movie-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(255, 255, 255, 0.1);
        }

        /* Click Effect */
        .movie-card:active {
            transform: scale(0.98);
            box-shadow: 0 2px 4px rgba(255, 255, 255, 0.1);
        }

    /* Movie Image */
    .movie-image {
        height: 400px;
        overflow: hidden;
        position: relative;
    }

        .movie-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    /* Image Zoom Effect on Hover */
    .movie-card:hover .movie-image img {
        transform: scale(1.05);
    }

    /* Movie Info Overlay */
    .movie-info {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 20px;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.9));
        color: white;
        opacity: 0.9;
        transition: opacity 0.3s ease;
    }

    .movie-card:hover .movie-info {
        opacity: 1;
    }

    /* Movie Title Styling */
    .movie-info h4 {
        margin: 0;
        font-size: 1.4rem;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    /* Genre Badges (Improved) */
    .badge.bg-primary {
        background-color: #6c757d !important;
        margin: 2px;
        font-size: 0.8rem;
        transition: all 0.2s ease;
    }

        .badge.bg-primary:hover {
            background-color: #5a6268 !important;
            transform: scale(1.05);
        }

    /* Movie Grid Container */
    .row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 25px;
        padding: 20px;
    }

    /* Movie Card Base */
    .movie-card {
        background-color: #1e1e1e;
