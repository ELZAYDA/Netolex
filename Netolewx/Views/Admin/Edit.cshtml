@model DetailsEditMovieVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditMovie</title>
    

</head>
<body>
    <div class="form-container">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter movie title" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter movie description">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ReleaseYear" class="form-label">Release Year</label>
                <input asp-for="ReleaseYear" class="form-control" type="number" placeholder="Enter release year" value="@Model.ReleaseYear" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duration" class="form-label">Duration (minutes)</label>
                <input asp-for="Duration" class="form-control" type="number" placeholder="Enter duration" value="@Model.Duration" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Genres</label>
                <select class="form-control" name="SelectedGenres" multiple>
                    @foreach (var genre in Model.GenreList)
                    {
                        if (genre.Selected)
                            {
                            <option value="@genre.Value" selected>@genre.Text</option>
                        }
                        else
                        {
                            <option value="@genre.Value">@genre.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="SelectedGenres" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PosterUrl" class="form-label">Poster URL</label>
                <input asp-for="PosterUrl" class="form-control" type="url" placeholder="Enter poster URL" value="@Model.PosterUrl" />
                <span asp-validation-for="PosterUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TrailerUrl" class="form-label">Trailer URL</label>
                <input asp-for="TrailerUrl" class="form-control" type="url" placeholder="Enter trailer URL" value="@Model.TrailerUrl" />
                <span asp-validation-for="TrailerUrl" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Save
            </button>
        </form>
    </div>
</body>
</html>
