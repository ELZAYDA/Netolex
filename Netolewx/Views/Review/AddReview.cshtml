@model AddReviewVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Review</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" />
    <link href="~/css/Review/AddReview.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2 class="text-center">📝 Add Review</h2>

        <div class="form-container">
            <form asp-action="AddReview" method="post">
                <div class="mb-3">
                    <label asp-for="Rating" class="form-label">Rating</label>
                    <input asp-for="Rating" type="number" class="form-control" min="1" max="5" placeholder="Enter rating (1-5)" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label">Comment</label>
                    <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Enter your review"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-paper-plane"></i> Submit Review
                </button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
