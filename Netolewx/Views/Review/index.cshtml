
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Review/index.css">
</head>
<body>
    <div class="container">
        <h2 class="page-title">📝 Review Management</h2>

        <!-- Add Review Button -->
        <div class="add-review-container">
            <a href="/Review/AddReview" class="btn-add-review">
                <i class="fas fa-plus-circle"></i> Add New Review
            </a>
        </div>

        <!-- Reviews Table -->
        <div class="table-container">
            <table class="review-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Movie Name</th>
                        <th>Reviewer</th>
                        <th>Rating</th>
                        <th>Comment</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model)
                    {
                        <tr>
                            <td>@review.Id</td>
                            <td>@review.MovieName</td>
                            <td>@review.ReviewerName</td>
                            <td>@review.Rating / 5</td>
                            <td>@review.Comment</td>
                            <td>@review.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/Review/DetailsReview/@review.Id" class="btn-details">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a href="/Review/EditReview/@review.Id" class="btn-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form action="/Review/DeleteReview/@review.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this review?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
