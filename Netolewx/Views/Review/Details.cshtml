@model DetailsEditReviewVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/Review/DetailsReview.css" rel="stylesheet" />
    <title>Review Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="form-container">
        <h2 class="text-center">📝 Review Details</h2>

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Rating</label>
            <input asp-for="Rating" type="number" class="form-control" min="1" max="5" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Comment" class="form-label">Comment</label>
            <textarea asp-for="Comment" class="form-control" rows="4" readonly></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="CreatedAt" class="form-label">Created At</label>
            <input asp-for="CreatedAt" type="text" class="form-control" readonly />
        </div>

        <div class="text-center mt-4">
            <a href="/admin/Index" class="btn btn-success">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</body>
</html>
