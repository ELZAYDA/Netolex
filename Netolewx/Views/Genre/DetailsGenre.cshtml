@model DetailsEditGenreVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/Genre/DetailsGenres.css" rel="stylesheet" />
    <title>DetailsGenre</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="form-container">
        <h2 class="text-center">🎭 Genre Details</h2>

        <input type="hidden" name="id" value="@Model.id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Genre Name</label>
            <input asp-for="Name" class="form-control" value="@Model.Name" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" readonly>@Model.Description</textarea>
        </div>

        <div class="text-center mt-4">
            <a href="/admin/GenresManagement" class="btn btn-success">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</body>
</html>
