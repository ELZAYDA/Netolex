<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Genre Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Genre/index.css">
</head>
<body>
    <div class="container">
        <h2 class="page-title">🎭 Genre Management</h2>

        <!-- Add Genre Button -->
        <div class="add-genre-container">
            <a href="/Genre/Add" class="btn-add-genre">
                <i class="fas fa-plus-circle"></i> Add New Genre
            </a>
        </div>

        <!-- Genres Table -->
        <div class="table-container">
            <table class="genre-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var genre in Model)
                    {
                        <tr>
                            <td>@genre.Id</td>
                            <td>@genre.Name</td>
                            <td class="truncate-text">@genre.Description</td>
                            <td>
                                <partial name="_buttons" model="@genre.Id" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>