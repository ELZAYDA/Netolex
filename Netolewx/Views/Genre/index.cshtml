<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Genre Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Genre/index.css">
</head>
<body>
    <div class="container">
        <h2 class="page-title">🎭 Genre Management</h2>

        <!-- Add Genre Button -->
        <div class="add-genre-container">
            <a href="/Genre/AddGenre" class="btn-add-genre">
                <i class="fas fa-plus-circle"></i> Add New Genre
            </a>
        </div>

        <!-- Genres Table -->
        <div class="table-container">
            <table class="genre-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var genre in Model)
                    {
                        <tr>
                            <td>@genre.Id</td>
                            <td>@genre.Name</td>
                            <td class="truncate-text">@genre.Description</td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/Genre/DetailsGenre/@genre.Id" class="btn-details">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a href="/Genre/EditGenre/@genre.Id" class="btn-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form action="/Genre/DeleteGenre/@genre.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this genre?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>